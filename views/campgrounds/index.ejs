<% layout("layouts/boilerplate.ejs") %>
<div class="card shadow mb-3" id="cluster-map"></div>
<h1>All Campgrounds</h1>
<a href="/campgrounds/new" class="btn btn-primary my-3">Add Campground</a>

<% for (campground of campgrounds) { %>
<div class="card shadow mb-4">
  <div class="row">
    <div class="col-md-4">
      <% if (campground.images.length) { %>
      <img
        src="<%=campground.images[0].url%>"
        alt="Campground image"
        class="img-fluid rounded-start h-100"
        crossorigin="anonymous"
      />
      <% } else { %>
      <img
        src="https://res.cloudinary.com/dn0rgwkgz/image/upload/v1709308868/YelpCamp/ymoza0tiw1u29rfng0na.jpg"
        alt="Campground image"
        class="img-fluid rounded-start h-100"
        crossorigin="anonymous"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title mb-3"><%= campground.title %></h5>
        <h6 class="card-subtitle mb-3 text-body-secondary">
          <%= campground.location %>
        </h6>
        <p class="card-text"><%= campground.description %></p>
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
          >View <%= campground.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapboxToken = "<%- process.env.MAPBOX_TOKEN %>";
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascript/clusterMapboxMap.js"></script>
